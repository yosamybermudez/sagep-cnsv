{% extends "default/bars.html.twig" %}

{% block contenpage %}
	<div class="">
		<div class="page-title">
			<div class="title_left">
				<h5>
					Lista de tipos de encuentro
				</h5>
			</div>
		</div>

		<div class="clearfix"></div>
		<div class="row">
			<div class="col-md-12">
				<div class="x_panel">
					<div class="x_title">
						<ul class="nav navbar-right panel_toolbox">
							<li>
								<a href="{{ path('encuentro_tipo_nuevo') }}" class="btn text-white btn-primary">AÑADIR</a>
							</li>
						</ul>
						<div class="clearfix"></div>
					</div>
					<div class="x_content">
						<div class="row">
							<form action="{{ path('encuentro_tipo_accion_grupal') }}" id="grpaction" method="post" name="grpaction">
								<div class="form-group form-inline">
									<select class="form-control" name="action" required id="action_select">
										<option value="">
											Acción de grupo</option>
										<option value="Eliminar">
											Eliminar</option>
									</select>
									<button class="btn btn-primary" type="submit"><span class="fa fa-arrow-right"></span> </button>
								</div>
							</form>
							<table id="example" class="display table table-striped table-bordered dataminetables">
								<thead>
									<th><input type="checkbox" id="select_all" name="select_all"></th>
									<th>Nombre</th>
									<th>Abreviatura</th>
									<th>Descripción</th>
									<th data-sortable="false">Opciones</th>
									<th data-sortable="false" class="text-center"><h4><i class="fa fa-lock"></i></h4></th>
								</thead>
								<tbody>
									{% for tipo in encuentroTipos  %}
										<tr>
											<td><input type="checkbox" class="chkgrp" name="chkgrp[]" value="{{ tipo.id }}"></td>
											<td>{{ tipo.nombre }}</td>
											<td>{{ tipo.abreviatura }}</td>
											<td>{{ tipo.descripcion }}</td>
											<td>
												<a class="btn btn-sm btn-primary" href="{{ path('encuentro_tipo_editar',{"id": tipo.id}) }}">
													<i class="fa fa-edit"></i>
												</a>
												<a class="btn btn-sm btn-danger disable-btn del-link" href="{{ path('encuentro_tipo_eliminar', {'id': tipo.id}) }}">
													<i class="fa fa-trash"></i>
												</a>
											</td>
											<td class="text-center">{% if tipo.encuentros | length > 0 %}<h4><i class="text-danger fa fa-lock"></i></h4>{% endif %}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% include 'default/tpl-lock.html.twig' %}
{% endblock %}

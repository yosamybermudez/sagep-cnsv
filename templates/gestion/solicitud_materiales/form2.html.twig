{% extends 'default/bars.html.twig' %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5><a href="{{ path('solicitud_materiales_listar') }}"><i class="fa fa-caret-left"></i> Volver a Lista de solicitudes de materiales</a></h5>
            </div>
        </div>

        <div class="clearfix"></div>
        <div id="cookie">
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Solicitud de material</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {{ form_start(form) }}
                            <div class="col-lg-2 col-12">{{ form_row(form.organismo) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(form.empresa) }}</div>
                            <div class="col-lg-2 col-12">{{ form_row(form.unidad) }}</div>
                            <div class="col-lg-2 col-12">{{ form_row(form.codigoUnidad) }}</div>

                            <div class="col-lg-12 col-12">{{ form_row(form.almacen) }}</div>

                            <div class="col-lg-3 col-12">{{ form_row(form.nroOrden) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(form.centroCosto) }}</div>
                            <div class="col-lg-3 col-12">{{ form_row(form.codigoCentroCosto) }}</div>

                            <div class="col-lg-3 col-12">{{ form_row(form.nroLote) }}</div>
                            <div class="col-lg-3 col-12">{{ form_row(form.producto) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(form.otros) }}</div>

                            <div class="col-lg-6 col-1 p-0">
                                <div class="col-lg-12 col-12">{{ form_row(form.solicitadoPorNombreCompleto) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.solicitadoPorCargo) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.solicitadoPorFecha) }}</div>
                            </div>
                            <div class="col-lg-6 col-12 p-0">
                                <div class="col-lg-12 col-12">{{ form_row(form.recibidoPorNombreCompleto) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.recibidoPorCargo) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.recibidoPorFecha) }}</div>
                            </div>
                            <div class="col-lg-12 col-12 p-0"></div>
                            <div class="col-lg-4 col-12">{{ form_row(form.nroSolicitud) }}</div>
                            <div class="col-lg-4 col-12">{{ form_row(form.valeEntrega) }}</div>
                            <div class="col-lg-4 col-12">{{ form_row(form.fileDocumento) }}</div>

                            <div class="col-lg-12 col-12">{{ form_row(form.comentario) }}</div>

                            <div class="col-lg-12 col-12">
                                <table class="table table-sm" id="solicitud-materiales-productos-tabla">
                                    <thead>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th><button type="button" id="solicitud-materiales-producto-adicionar-fila" class="adicionar-fila btn btn-success text-white glyphicon glyphicon-plus w-100 btn btn-sm" data-list-selector="#solicitud-materiales-producto-list"> </button></th>
                                    </thead>
                                    <tbody id="solicitud-materiales-producto-list" data-prototype="{{ form_widget(form.solicitudesMaterialesProductos.vars.prototype)|e }}">
                                        {% for elem in form.solicitudesMaterialesProductos %}
                                        <tr>

                                            <td>{{ form_widget(elem.producto, {'value' : elem.vars.value.producto.descripcion }) }}</td>
                                            <td>{{ form_widget(elem.cantidad, {'value' : elem.vars.value.cantidad }) }}</td>
                                            <td>{{ form_widget(elem.eliminar_fila) }}</td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a class="btn btn-sm btn-warning" href="{{ path('solicitud_materiales_listar') }}">Cancelar</a>
                            <button type="submit" name="valider" class="btn btn-sm btn-success">Registrar</button>
                        </div>
                    </div>
                {{ form_row(form._token) }}
                {{ form_end(form, {'render_rest' : false}) }}
            </div>
        </div>
    </div>
{% endblock %}

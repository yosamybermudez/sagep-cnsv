{% extends 'default/bars.html.twig' %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5><a href="{{ path('usuario_listar') }}">Volver a Lista de usuarios </a></h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Registrar usuario</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <h5>Datos del usuario</h5>
                                <div class="col-lg-12 col-12">{{ form_row(form.username) }}</div>
                                <div class="col-lg-6 col-12">{{ form_row(form.password.first) }}</div>
                                <div class="col-lg-6 col-12">{{ form_row(form.password.second) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.email) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.nombreCompleto) }}</div>
                                <div class="col-lg-12 col-12">{{ form_row(form.role) }}</div>
                            </div>
                            <div class="col-lg-6 col-12">
                                <h5>Datos del trabajador asociado</h5>
                                <div class="col-lg-12 col-12">{{ form_row(form.trabajadorAsociado) }}</div>
                                <a class="btn btn-primary btn-sm" href="{{ path('trabajador_nuevo', {'redirect': app.request.requesturi} ) }}">AÃ±adir trabajador</a>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="">
                                <a class="btn btn-warning" href="{{ path('usuario_listar') }}">Cancelar</a>
                                <button type="submit" name="valider" class="btn btn-success">Registrar</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
